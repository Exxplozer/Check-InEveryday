        putCheckin = function () {
            var checkinId = document.getElementById("checkinId").value;
            var day = document.getElementById("days").value;
            var hour = document.getElementById("hours").value;
            $.ajax({
                url: "https://checkineveryday.herokuapp.com/mobile-api/restart",
                type: "PUT",
                data: { id: checkinId,  days: day, hours: hour},
                dataType: "json",
                success: function (result) {
                },
                error: function (xhr, ajaxOptions, thrownError) {
                }
            });
        };
