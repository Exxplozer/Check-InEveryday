doctype html
html
    head
        title=  "Check-in Everyday"
        script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
    body
        script(type='text/javascript').
            function initialize() {
                var mapOptions = {
                    zoom: 4,
                    center: new google.maps.LatLng(-25.363882, 131.044922)
                };
                var map = new google.maps.Map(document.getElementById('map-canvas'),
                        mapOptions);
            google.maps.event.addListener(map, 'click', function (e) {
                document.getElementById("ll2").value = e.latLng.lat() + "," + e.latLng.lng();
                document.getElementById("ll").value = e.latLng.lat() + "," + e.latLng.lng();
                document.getElementById("ll3").value = e.latLng.lat() + "," + e.latLng.lng();
                document.getElementById("ll4").value = e.latLng.lat() + "," + e.latLng.lng();
                document.getElementById("ll5").value = e.latLng.lat() + "," + e.latLng.lng();
            });

            }
            google.maps.event.addDomListener(window, 'load', initialize);
        div(class="container")
            div(class="col-md-6")
                block content
            div(class="col-md-6")
                div(id = "map-canvas" style = "width: 300px; height: 300px")

    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")